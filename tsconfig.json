{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "dist",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"baseUrl": "./",
		"types": ["vitest/globals"],
		"paths": {
			"@/*": ["./src/*"],
			"pkg": ["package.json"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
