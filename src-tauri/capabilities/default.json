{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "enables the default permissions",
	"windows": ["main"],
	"permissions": [
		"fs:default",
		"dialog:default",
		"updater:default",
		"log:default",
		{
			"identifier": "fs:allow-app-write",
			"allow": [
				{
					"path": "$DOCUMENT/*"
				}
			]
		},
		{
			"identifier": "dialog:allow-open",
			"allow": [
				{
					"path": "$DOCUMENT/*"
				}
			]
		},
		{
			"identifier": "dialog:allow-save",
			"allow": [
				{
					"path": "$DOCUMENT/*"
				}
			]
		}
	]
}
